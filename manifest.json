{
  "manifest_version": 3,
  "name": "Universal Book Downloader",
  "version": "1.4.1",
  "description": "Универсальное расширение для скачивания учебных материалов со Znanium, Biblioclub, Urait и Lanbook.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "power"
  ],
  "host_permissions": [
    "https://znanium.ru/*",
    "https://*.znanium.ru/*",
    "https://lanbook.com/*",
    "https://*.lanbook.com/*",
    "https://urait.ru/*",
    "https://biblioclub.ru/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.znanium.ru/*",
        "*://znanium.ru/*",
        "*://*.lanbook.com/*",
        "*://lanbook.com/*",
        "*://*.urait.ru/*",
        "*://urait.ru/*",
        "*://*.biblioclub.ru/*",
        "*://biblioclub.ru/*"
      ],
      "js": [
        "libs/pdfkit.standalone.js",
        "libs/blob-stream.min.js",
        "libs/SVG-to-PDFKit.js",
        "libs/jszip.min.js",
        "preload.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": [
        "*://*.znanium.ru/*",
        "*://znanium.ru/*",
        "*://*.lanbook.com/*",
        "*://lanbook.com/*",
        "*://*.urait.ru/*",
        "*://urait.ru/*",
        "*://*.biblioclub.ru/*",
        "*://biblioclub.ru/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "worker.js",
        "libs/*.js",
        "decryptSVG.wasm",
        "preload.js",
        "inject.js"
      ],
      "matches": [
        "*://*.znanium.ru/*",
        "*://znanium.ru/*",
        "*://*.lanbook.com/*",
        "*://lanbook.com/*",
        "*://*.urait.ru/*",
        "*://urait.ru/*",
        "*://*.biblioclub.ru/*",
        "*://biblioclub.ru/*"
      ]
    }
  ]
}